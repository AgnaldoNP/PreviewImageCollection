<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ImageCollectionView">
        <attr name="baseRowHeight" format="dimension" />
        <attr name="imageMargin" format="dimension" />
        <attr name="maxImagePerRow" format="integer" />
        <attr name="maxRows" format="integer" />
        <attr name="backgroundColor" format="color" />
        <attr name="pinchToZoom" format="boolean" />
        <attr name="showExternalBorderMargins" format="boolean" />
        <attr name="imageScaleType">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
    </declare-styleable>

    <attr name="previewImageCollection" format="reference" />

</resources>
